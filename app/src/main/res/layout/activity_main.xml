<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="mainViewModel"
            type="com.android.covid_19.MainViewModel" />
    </data>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:gravity="center"
    tools:context=".MainActivity" android:orientation="vertical">

    <TextView
        android:id="@+id/from"
        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="from"></TextView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/c1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/from_pick_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pick date" />
</com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/c3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/from_pick_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pick time"></TextView>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/to"
        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To"></TextView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/c4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/to_pick_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pick time"></TextView>

    </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/c2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/to_pick_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pick date"></TextView>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</layout>